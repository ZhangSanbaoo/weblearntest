  <div style="margin-top: 100px;"></div>
  <ul style="display: flex; flex-direction: column; align-items: center; width: 50%; margin: 0 auto; justify-content: center;">
    <% students.forEach(function(student, index) { %>
      <li style="margin-bottom: 10px;"><a href="/students/<%= index + 1 %>"><%= student.name %></a> | <%= student.school %></li>
    <% }) %>
  </ul>
  <div style="margin-top: 150px;"></div>
  <div style="display: flex; width: 70%; margin: 0 auto; justify-content: center;">
  <button id="test">Click me!</button>
  </div>
  <script type="text/javascript" src="/students.js"></script>
</body>
</html>
